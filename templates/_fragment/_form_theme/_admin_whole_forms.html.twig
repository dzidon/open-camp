                                 src="{{ image_url }}"
                                 alt="{{ 'entity_attribute.user.image'|trans }}"
                            >
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}

    {{ form_rest(form) }}
{% endblock %}

