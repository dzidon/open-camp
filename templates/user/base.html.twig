{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ encore_entry_link_tags('user') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('user') }}
{% endblock %}

{% block body_class %}
    d-flex flex-column min-vh-100
{% endblock %}

{% block body %}
    <main role="main" class="flex-fill mb-4">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('user_home') }}">{{ 'app.site_name'|trans }}</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbar">
                    {% set navbar_user = build_menu('navbar_user') %}
                    {{ menu(navbar_user) }}
                </div>
            </div>
        </nav>

        <!-- Page content-->
        <div class="container pt-4">
            <!-- Breadcrumbs -->
            {% if breadcrumbs is defined %}
                {{ menu(breadcrumbs) }}
            {% endif %}

            <!-- Flash messages -->
            {% if app.session.flashbag.peekAll|length > 0 %}
                <div class="row">
                    <div class="col">
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="alert pt-3 {% if type == 'success' %} alert-success {% elseif type == 'failure' %} alert-danger {% elseif type == 'warning' %} alert-warning {% elseif type == 'info' %} alert-primary {% endif %}" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <!-- Heading -->
            {% block h1 %}
                {% if is_route_name_set() %}
                    <h1 class="mb-3">{{ route_name() }}</h1>
                {% endif %}
            {% endblock %}

            {% block main %}{% endblock %}
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">Footer...</span>
        </div>
    </footer>
{% endblock %}