{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ encore_entry_link_tags('user') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('user') }}
{% endblock %}

{% block body_class %}
    d-flex flex-column h-100
{% endblock %}

{% block body %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black">
            <div class="container-xl">
                <a class="navbar-brand" href="{{ path('user_home') }}">
                    <img src="{{ company_logo_url() }}"
                         alt="{{ company_name }}"
                         class="d-inline-block align-top me-2"
                         width="30"
                         height="30"
                    >

                    {{ company_name }}
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbar"
                        aria-controls="navbar"
                        aria-expanded="false"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbar">
                    {% set navbar_user = build_menu('navbar_user') %}
                    {{ menu(navbar_user) }}
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-shrink-0 mb-4">
        <div class="container pt-4">
            <!-- Breadcrumbs -->
            <div class="row mb-2">
                <div class="col">
                    {% if breadcrumbs is defined %}
                        {{ menu(breadcrumbs) }}
                    {% endif %}
                </div>
            </div>

            <!-- Flash messages -->
            {% block flash %}
                {{ include('_fragment/_flash/_user.html.twig') }}
            {% endblock %}

            <!-- Heading -->
            {% block h1 %}
                {% if is_route_name_set() %}
                    <h1 class="mb-3">{{ route_name() }}</h1>
                {% endif %}
            {% endblock %}

            {% block main %}{% endblock %}
        </div>

        {% if is_granted('text_content_update') %}
            {{ include('_fragment/_modal/_text_contect_update.html.twig') }}
        {% endif %}
    </main>

    <footer class="footer mt-auto py-3 bg-body-secondary">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-6">
                    <span class="text-muted">Footer</span>
                </div>

                <div class="col-6">
                    {% if themes is not empty %}
                        <div class="float-end">
                            {% set theme_picker = build_menu('theme_picker') %}
                            {{ menu(theme_picker) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </footer>
{% endblock %}