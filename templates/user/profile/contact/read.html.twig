{% extends "user/profile/base.html.twig" %}

{% block profile_content %}
    <div class="row mb-3">
        <div class="col-12 col-sm-3">
            <strong>{{ 'entity_attribute.contact.name'|trans }}:</strong>
        </div>

        <div class="col-12 col-sm-9">
            <span>{{ contact.name }}</span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 col-sm-3">
            <strong>{{ 'entity_attribute.contact.email'|trans }}:</strong>
        </div>

        <div class="col-12 col-sm-9">
            <span>{{ contact.email }}</span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 col-sm-3">
            <strong>{{ 'entity_attribute.contact.phone_number'|trans }}:</strong>
        </div>

        <div class="col-12 col-sm-9">
            <span>{{ contact.phoneNumber|phone_number_format(phone_number_format) }}</span>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <a href="{{ path('user_profile_contact_update', {id: contact.id}) }}" class="card-link">
                {{ 'crud.action.common.update'|trans }}
            </a>

            <a href="{{ path('user_profile_contact_delete', {id: contact.id}) }}" class="card-link">
                {{ 'crud.action.common.delete'|trans }}
            </a>
        </div>
    </div>
{% endblock %}