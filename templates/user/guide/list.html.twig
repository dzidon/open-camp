{% extends 'user/base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-12">
            {% if paginator.totalItems > 0 %}
                <div class="row">
                    {% for guide in paginator.currentPageItems %}
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 d-flex">
                            {{ include('_fragment/_guide/_card.html.twig', {guide: guide}) }}
                        </div>
                    {% endfor %}
                </div>

                <div class="row">
                    <div class="col-12">
                        {{ menu(pagination_menu) }}
                    </div>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-12">
                        {{ 'search.error.no_results'|trans }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}