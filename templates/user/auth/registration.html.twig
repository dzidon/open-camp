{% extends "user/base.html.twig" %}

{% block main %}
    <div class="row mb-5">
        <div class="col-md-8 col-lg-6 col-xl-5">
            {{ form(form_registration) }}
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-8 col-lg-6 col-xl-5">
            {{ 'auth.already_have_account'|trans }}

            <a href="{{ path('user_login') }}">
                {{ 'auth.already_have_account_link'|trans }}
            </a>
        </div>
    </div>

    {% if social_login_services is not empty %}
        <div class="row mb-5">
            <div class="col-12">
                <div class="mb-1">
                    {{ 'auth.social_login'|trans }}:
                </div>

                {{ include('_fragment/_auth/_social_login_links.html.twig') }}
            </div>
        </div>
    {% endif %}
{% endblock %}