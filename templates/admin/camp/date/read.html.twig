{% extends "admin/base.html.twig" %}

{% block main %}
    <div class="row">
        <div class="col-12">
            <div class="card card-outline card-primary">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.start_at'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            <span>{{ camp_date.startAt|date(date_time_format) }}</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.end_at'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            <span>{{ camp_date.endAt|date(date_time_format) }}</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.deposit'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            <span>{{ camp_date.deposit|format_currency(currency) }}</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.price_without_deposit'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            <span>{{ camp_date.priceWithoutDeposit|format_currency(currency) }}</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.deposit_until'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.depositUntil is null %}
                                <em>{{ 'entity_attribute.common.unset'|trans }}</em>
                            {% else %}
                                <span>{{ camp_date.depositUntil|date(date_time_format) }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.capacity'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            <span>{{ camp_date.capacity }}</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.is_open_above_capacity'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.isOpenAboveCapacity %}
                                <span>{{ 'bool.yes'|trans }}</span>
                            {% else %}
                                <span>{{ 'bool.no'|trans }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.is_hidden'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.isHidden %}
                                <span>{{ 'bool.yes'|trans }}</span>
                            {% else %}
                                <span>{{ 'bool.no'|trans }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.is_closed'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.isClosed %}
                                <span>{{ 'bool.yes'|trans }}</span>
                            {% else %}
                                <span>{{ 'bool.no'|trans }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.description'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.description is null %}
                                <em>{{ 'search.item_no_reference.neutral'|trans }}</em>
                            {% else %}
                                <span>{{ camp_date.description|nl2br }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.trip_location_path_there'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.tripLocationPathThere is null %}
                                <em>{{ 'entity_attribute.common.unset'|trans }}</em>
                            {% else %}
                                <span>{{ camp_date.tripLocationPathThere.name }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.trip_location_path_back'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.tripLocationPathBack is null %}
                                <em>{{ 'entity_attribute.common.unset'|trans }}</em>
                            {% else %}
                                <span>{{ camp_date.tripLocationPathBack.name }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.discount_config'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.discountConfig is null %}
                                <em>{{ 'entity_attribute.common.unset'|trans }}</em>
                            {% else %}
                                <span>{{ camp_date.discountConfig.name }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.users'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.campDateUsers is empty %}
                                <em>{{ 'search.error.no_results'|trans }}</em>
                            {% else %}
                                {% for camp_date_user in camp_date.campDateUsers %}
                                    {% set user = camp_date_user.user %}

                                    <div>
                                        <span>
                                            {{ user.email }}

                                            {% if user.nameFull is not null %}
                                                ({{ user.nameFull }})
                                            {% endif %}
                                        </span>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.form_fields'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.campDateFormFields is empty %}
                                <em>{{ 'search.error.no_results'|trans }}</em>
                            {% else %}
                                {% for camp_date_form_field in camp_date.campDateFormFields %}
                                    {% set form_field = camp_date_form_field.formField %}

                                    <div>
                                        <span>
                                            {{ form_field.name }}
                                        </span>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.attachment_configs'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.campDateAttachmentConfigs is empty %}
                                <em>{{ 'search.error.no_results'|trans }}</em>
                            {% else %}
                                {% for camp_date_attachment_config in camp_date.campDateAttachmentConfigs %}
                                    {% set attachment_config = camp_date_attachment_config.attachmentConfig %}

                                    <div>
                                        <span>
                                            {{ attachment_config.name }}
                                        </span>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.camp_date.purchasable_items'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if camp_date.campDatePurchasableItems is empty %}
                                <em>{{ 'search.error.no_results'|trans }}</em>
                            {% else %}
                                {% for camp_date_purchasable_item in camp_date.campDatePurchasableItems %}
                                    {% set purchasable_item = camp_date_purchasable_item.purchasableItem %}

                                    <div>
                                        <span>
                                            {{ purchasable_item.name }}
                                        </span>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <a href="{{ path('admin_camp_date_update', {id: camp_date.id.toRfc4122}) }}" class="btn btn-primary mr-2">
                        {{ 'crud.action.common.update'|trans }}
                    </a>

                    <a href="{{ path('admin_camp_date_create', {id: camp.id.toRfc4122, duplicateCampDateId: camp_date.id.toRfc4122}) }}"
                       class="btn btn-primary mr-2"
                    >
                        {{ 'crud.action.common.duplicate'|trans }}
                    </a>

                    <a href="{{ path('admin_camp_date_delete', {id: camp_date.id.toRfc4122}) }}" class="btn btn-danger">
                        {{ 'crud.action.common.delete'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}