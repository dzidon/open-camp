{% extends "admin/camp/base_update.html.twig" %}

{% block camp_update_content %}
    <div class="row">
        <div class="col-12">
            <div class="card card-outline card-primary">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-8 col-xl-5">
                            <p>{{ 'crud.confirmation.camp_image_delete'|trans }}</p>

                            <div class="row mb-3">
                                <div class="col-12 col-sm-6 col-lg-4">
                                    <div class="bg-black">
                                        {% set image_url = camp_image_url(camp_image) %}
                                        {% set img %}
                                            <img class="image-cover-16-9"
                                                 src="{{ image_url }}"
                                                 alt="{{ 'entity.camp_image.singular'|trans }} - {{ camp.name }}"
                                            >
                                        {% endset %}

                                        {% if is_camp_image_url_placeholder(image_url) %}
                                            {{ img }}
                                        {% else %}
                                            <a href="{{ image_url }}">
                                                {{ img }}
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            {{ form(form_delete) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}