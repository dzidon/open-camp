{% extends "admin/base.html.twig" %}

{% block main %}
    <div class="row">
        <div class="col-12">
            <div class="card card-outline card-primary">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-8 col-xl-5">
                            {{ form_start(form_profile) }}
                                <div class="form-row">
                                    <div class="col-md-6">
                                        {{ form_row(form_profile.nameFirst) }}
                                    </div>

                                    <div class="col-md-6">
                                        {{ form_row(form_profile.nameLast) }}
                                    </div>
                                </div>

                                {{ form_rest(form_profile) }}
                            {{ form_end(form_profile) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card card-outline card-primary">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12 col-sm-3">
                            <strong>{{ 'entity_attribute.user.email'|trans }}:</strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            <span>{{ admin.email }}</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 col-sm-3">
                            <strong>
                                {{ 'entity_attribute.role.permissions'|trans }}:
                            </strong>
                        </div>

                        <div class="col-12 col-sm-9">
                            {% if admin.role is null %}
                                <div>
                                    <em>{{ 'search.error.no_results'|trans }}</em>
                                </div>
                            {% else %}
                                {% set permissions_grouped = admin.role.getPermissionsGrouped(true) %}

                                {% if permissions_grouped is empty %}
                                    <div>
                                        <em>{{ 'search.error.no_results'|trans }}</em>
                                    </div>
                                {% else %}
                                    {% for group_label, permissions in permissions_grouped %}
                                        <div {% if not loop.first %} class="mt-2" {% endif %}>
                                            <span>{{ group_label|trans }}:</span>
                                        </div>

                                        {% for permission in permissions %}
                                            <div>
                                                <span>- {{ permission.label|trans }}</span>
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}