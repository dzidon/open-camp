{% extends "admin/base.html.twig" %}

{% block main %}
    <div class="row">
        <div class="col-12">
            <div class="card card-outline card-primary">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-8 col-xl-5">
                            {{ form_start(form_purchasable_item) }}
                                {{ form_row(form_purchasable_item.name) }}
                                {{ form_row(form_purchasable_item.label) }}
                                {{ form_row(form_purchasable_item.price) }}
                                {{ form_row(form_purchasable_item.maxAmount) }}
                                {{ form_row(form_purchasable_item.isGlobal) }}
                                {{ form_row(form_purchasable_item.image) }}

                                {% if purchasable_item is defined and purchasable_item.imageExtension is not null %}
                                    <div class="row purchasable-item-image"
                                         data-controller="cv--content"
                                         data-cv--content-show-when-checked-value="0"
                                    >
                                        <div class="col-4 col-md-3 mb-3">
                                            <div class="bg-black">
                                                <a href="{{ asset(purchasable_item_image_path(purchasable_item)) }}">
                                                    <img class="image-cover-16-9"
                                                         src="{{ asset(purchasable_item_image_path(purchasable_item)) }}"
                                                         alt="{{ 'entity_attribute.purchasable_item.image'|trans }} - {{ purchasable_item.name }}"
                                                    >
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}

                                {{ form_rest(form_purchasable_item) }}
                            {{ form_end(form_purchasable_item) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if is_search_invalid is defined and form_search is defined %}
        <div class="row">
            <div class="col-12">
                <h4 class="mb-3">{{ 'entity.purchasable_item_variant.plural'|trans }}</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card card-outline card-primary">
                    <a data-toggle="collapse" href="#search-content" role="button">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-search mr-2"></i>
                                {{ 'search.label'|trans }}
                            </h3>
                        </div>
                    </a>

                    <div class="card-body collapse {% if is_search_invalid %} show {% endif %}" id="search-content">
                        {{ form_start(form_search) }}
                            <div class="form-row">
                                <div class="form-group col-md-9">
                                    {{ form_row(form_search.phrase) }}
                                </div>

                                <div class="form-group col-md-3">
                                    {{ form_row(form_search.sortBy) }}
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary mb-2">{{ 'form.admin.purchasable_item_search.button'|trans }}</button>
                        {{ form_end(form_search) }}
                    </div>
                </div>
            </div>
        </div>

        {% if is_search_invalid %}
            <div class="row">
                <div class="col-12">
                    <div class="card card-outline card-danger">
                        <div class="card-header">
                            <span>
                                {{ 'search.error.invalid_filter'|trans }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}

    {% if paginator is defined and pagination_menu is defined and purchasable_item is defined %}
        <div class="row">
            <div class="col-12">
                <div class="card card-outline card-primary">
                    <div class="card-header d-flex w-100 align-items-center">
                        <h3 class="card-title">
                            {% if paginator.totalItems > 0 %}
                                {{ 'search.results'|trans }} ({{ 'search.total'|trans }} {{ paginator.totalItems }})
                            {% else %}
                                {{ 'search.error.no_results'|trans }}
                            {% endif %}
                        </h3>

                        <a href="{{ path('admin_purchasable_item_variant_create', {id: purchasable_item.id.toRfc4122}) }}" class="btn btn-success ml-3">
                            {{ 'crud.action.common.create'|trans }}
                        </a>
                    </div>

                    {% if paginator.totalItems > 0 %}
                        <div class="card-body table-responsive p-0">
                            <table class="table text-nowrap">
                                <thead>
                                    <tr>
                                        <th>{{ 'entity_attribute.purchasable_item_variant.name'|trans }}</th>
                                        <th>{{ 'entity_attribute.purchasable_item_variant.priority'|trans }}</th>
                                        <th class="cell-25">{{ 'search.item_action'|trans }}</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    {% for purchasable_item_variant in paginator.currentPageItems %}
                                        <tr class="align-items-center">
                                            <td class="align-middle">
                                                <span>{{ purchasable_item_variant.name }}</span>
                                            </td>

                                            <td class="align-middle">
                                                <span>{{ purchasable_item_variant.priority }}</span>
                                            </td>

                                            <td class="align-middle cell-25">
                                                <a href="{{ path('admin_purchasable_item_variant_read', {id: purchasable_item_variant.id.toRfc4122}) }}" class="btn btn-secondary">
                                                    {{ 'crud.action.common.read'|trans }}
                                                </a>

                                                <a href="{{ path('admin_purchasable_item_variant_update', {id: purchasable_item_variant.id.toRfc4122}) }}" class="btn btn-primary">
                                                    {{ 'crud.action.common.update'|trans }}
                                                </a>

                                                <a href="{{ path('admin_purchasable_item_variant_delete', {id: purchasable_item_variant.id.toRfc4122}) }}" class="btn btn-danger">
                                                    {{ 'crud.action.common.delete'|trans }}
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="card-footer clearfix">
                            {{ menu(pagination_menu) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}

    {{ include('_fragment/_modal/_form_collection_removal.html.twig') }}
{% endblock %}