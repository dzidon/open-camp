{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body_class %}
    hold-transition sidebar-mini
{% endblock %}

{% block body %}
    <div class="wrapper">
        <!-- Top navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left aligned items -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fa-solid fa-bars"></i>
                    </a>
                </li>
            </ul>

            <!-- Right aligned items -->
            <ul class="navbar-nav ml-auto">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li class="nav-item">
                        <a href="{{ path('admin_profile') }}" class="nav-link">{{ app.user.email }}</a>
                    </li>

                    <li class="nav-item">
                        <a href="{{ path('user_logout') }}" class="nav-link">{{ 'route.user_logout'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </nav>

        <!-- Left navbar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Logo -->
            <a href="{{ path('admin_home') }}" class="brand-link">
                <span class="brand-text font-weight-light">{{ 'app.site_name'|trans }}</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar menu -->
                <nav class="mt-2">
                    {% set navbar_admin = build_menu('navbar_admin') %}
                    {{ menu(navbar_admin) }}
                </nav>
            </div>
        </aside>

        <!-- Content -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <!-- Heading -->
                            {% if is_route_name_set() %}
                                <h1 class="m-0">{{ route_name() }}</h1>
                            {% endif %}
                        </div>

                        <div class="col-sm-6">
                            <div class="float-sm-right">
                                {% if _breadcrumbs is defined %}
                                    {{ menu(_breadcrumbs) }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    <!-- Flash messages -->
                    {% if app.session.flashbag.peekAll|length > 0 %}
                        <div class="row">
                            {% for type, messages in app.session.flashbag.all() %}
                                {% for message in messages %}
                                    <div class="col-md-12">
                                        <div class="card {% if type == 'success' %} card-success {% elseif type == 'failure' %} card-danger {% elseif type == 'warning' %} card-warning {% elseif type == 'info' %} card-primary {% endif %}">
                                            <div class="card-header">
                                                <h3 class="card-title">
                                                    {% if type == 'success' %} {{ 'flash_message.success'|trans }}
                                                    {% elseif type == 'failure' %} {{ 'flash_message.failure'|trans }}
                                                    {% elseif type == 'warning' %} {{ 'flash_message.warning'|trans }}
                                                    {% elseif type == 'info' %} {{ 'flash_message.info'|trans }}
                                                    {% endif %}
                                                </h3>

                                                <div class="card-tools">
                                                    <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>

                                            <div class="card-body">
                                                {{ message }}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% block main %}{% endblock %}
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>&copy; {{ 'now' | date('Y') }}, {{ 'app.site_name'|trans }}</strong>
        </footer>
    </div>
{% endblock %}