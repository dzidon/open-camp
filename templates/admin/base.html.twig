{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body_class %}
    hold-transition sidebar-mini
{% endblock %}

{% block body %}
    <div class="wrapper">
        <!-- Top navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left aligned items -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fa-solid fa-bars"></i>
                    </a>
                </li>
            </ul>

            <!-- Right aligned items -->
            {% set navbar_admin_horizontal = build_menu('navbar_admin_horizontal') %}
            {{ menu(navbar_admin_horizontal) }}
        </nav>

        <!-- Left navbar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Logo -->
            <a href="{{ path('admin_home') }}" class="brand-link">
                <span class="brand-text font-weight-light">{{ 'app.site_name'|trans }}</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar menu -->
                <nav class="mt-2">
                    {% set navbar_admin_vertical = build_menu('navbar_admin_vertical') %}
                    {{ menu(navbar_admin_vertical) }}
                </nav>
            </div>
        </aside>

        <!-- Content -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <!-- Heading -->
                            {% block h1 %}
                                {% if is_route_name_set() %}
                                    <h1 class="m-0">{{ route_name() }}</h1>
                                {% endif %}
                            {% endblock %}
                        </div>

                        <div class="col-sm-6">
                            <div class="float-sm-right">
                                {% if breadcrumbs is defined %}
                                    {{ menu(breadcrumbs) }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    <!-- Flash messages -->
                    {% block flash %}
                        {{ include('_fragment/_flash/_admin.html.twig', {app: app}) }}
                    {% endblock %}

                    {% block main %}{% endblock %}
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>&copy; {{ 'now' | date('Y') }}, {{ 'app.site_name'|trans }}</strong>
        </footer>
    </div>
{% endblock %}